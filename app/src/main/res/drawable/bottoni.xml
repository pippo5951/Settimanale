<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <gradient
                android:angle="270"
                android:color="#036AF7"
                android:startColor="#B86A6A"/>
            <stroke
                android:width="3dp"
                android:color="#ECC6C6" />
            <corner
                android:radius="10dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:color="#2C0BF1"
                android:startColor="#DA5858"/>
            <stroke
                android:width="3dp"
                android:color="#D6D3D3" />
            <corners
                android:radius="10dp"/>
            <padding
                android:bottom=".5dp"
                android:left=".5dp"
                android:right=".5dp"
                android:top=".5dp"/>
        </shape>
    </item>


</selector>