<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/gradient2">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/bike_icon"/>
    <Chronometer
        android:id="@+id/chronometer"
        android:textColor="@color/colorTempo"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="28dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:background="@drawable/gradient2"
        android:gravity="center"
        android:text="@string/info"
        android:textColor="@color/colorBianco"
        android:textSize="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/gradient2"
        android:layout_marginTop="52dp"
        android:weightSum="3">

    <Button
        android:layout_weight="1"
        android:layout_width="60dp"
        android:textColor="@color/colorBianco"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:onClick="startChronometer"
        android:background="@drawable/bottoni"
        android:text="@string/start" />

    <Button
        android:layout_weight="1"
        android:layout_width="60dp"
        android:textColor="@color/colorBianco"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:onClick="pauseChronometer"
        android:background="@drawable/bottoni"
        android:text="@string/pause" />

    <Button
        android:layout_weight="1"
        android:layout_width="60dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorBianco"
        android:layout_height="wrap_content"
        android:onClick="resetChronometer"
        android:background="@drawable/bottoni"
        android:text="@string/reset" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/gradient2"
        android:layout_marginTop="90dp"
        android:weightSum="2">


    <Button
        android:layout_weight="1"
        android:layout_width="60dp"
        android:textColor="@color/colorBianco"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:text="@string/aggiungi"
        android:background="@drawable/bottoni"
        android:id="@+id/button_add" />

    <Button
        android:layout_weight="1"
        android:layout_width="60dp"
        android:textColor="@color/colorBianco"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:text="@string/cancella"
        android:background="@drawable/bottoni"
        android:id="@+id/button_delete" />

</LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="142dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_testo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorBianco"
            android:textSize="12sp"
            android:textStyle="bold|italic" />
    </ScrollView>

</RelativeLayout>